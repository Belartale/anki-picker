{
    "manifest_version": 3,
    "name": "anki-picker",
    "description": "",
    "version": "0.0.1",
    "icons": {
        "16": "icon-16.png",
        "32": "icon-32.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    },
    "content_scripts": [
        {
            "js": [
                "content.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "matches": [
                "*://*/*",
                "http://*/*",
                "https://*/*",
                "ftp://*/*",
                "file://*/*",
                "chrome-extension://*/*"
            ],
            "resources": [
                "content.html"
            ]
        }
    ],
    "background": {
        "service_worker": "serviceWorkers.js",
        "type": "module"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon-16.png",
            "32": "icon-32.png",
            "48": "icon-48.png",
            "128": "icon-128.png"
        }
    },
    "permissions": [
        "scripting",
        "activeTab",
        "storage"
    ],
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+B",
                "mac": "Command+B"
            }
        }
    }
}