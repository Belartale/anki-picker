{
    "manifest_version": 3,
    "name": "anki-picker",
    "description": "",
    "version": "0.0.1",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "content_scripts": [
        {
            "js": ["content/index.js"],
            "matches": ["<all_urls>"]
        }
    ],
    "web_accessible_resources": [
        {
            "matches": [
                "*://*/*",
                "http://*/*",
                "https://*/*",
                "ftp://*/*",
                "file://*/*",
                "chrome-extension://*/*"
            ],
            "resources": ["/popup/index.html"]
        }
    ],
    "background": {
        "service_worker": "serviceWorkers/index.js",
        "type": "module"
    },
    "action": {
        "default_popup": "popup/index.html",
        "default_icon": {
            "16": "images/icon-16.png",
            "32": "images/icon-32.png",
            "48": "images/icon-48.png",
            "128": "images/icon-128.png"
        }
    },
    "permissions": ["scripting", "activeTab", "storage"],
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+B",
                "mac": "Command+B"
            }
        }
    }
}
